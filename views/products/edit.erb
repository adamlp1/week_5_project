<h2>Edit <%= @product.name %></h2>
<form method="POST" action="/products/<%= @product.id %>">
  <div class="form-wrapper">

    <div class="form-el">
      <label for="name">Name:</label>
      <input type="text" name="name" id="name" value="<%= @product.name %>" REQUIRED/>
    </div>

    <div class="form-el">
      <label for="description">Desc:</label>
      <input type="text" name="description" id="description" value ="<%= @product.description %>" REQUIRED/>
    </div>

    <div class="form-el">
      <label for="stock">Stock:</label>
      <input type="number" name="stock" id="stock" value="<%= @product.stock %>" min=0 REQUIRED/>
    </div>

    <div class="form-el">
      <label for="buy_cost">Buy Cost:</label>
      <input type="number" name="buy_cost" id="buy_cost" value="<%= @product.buy_cost%>" min=0/>
    </div>

    <div class="form-el">
      <label for="sell_price">Sell Price:</label>
      <input type="number" name="sell_price" id="sell_price" value="<%= @product.sell_price%>" min=0/>
    </div>

    <div class="form-el">
      <input type="submit" value="Confirm Edit"/>
    </div>

  </div>
</form>